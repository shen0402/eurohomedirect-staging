<style>
  .collection-bottom-des {
    flex-wrap: wrap;
    justify-content: flex-start;
  }

  @media screen and (max-width: 640px) {
    .text-with-icons__item {
      text-align: left;
    }

    .collection-bottom-des__title {
      margin-top: 2rem;
    }
  }

  @media screen and (max-width: 640px) {
    .contact-us-container {
      padding: 0;
    }
  }

  @media screen and (min-width: 641px) and (max-width: 999px) {
    .contact-us-container {
      padding: 0 40px;
    }
  }

  @media screen and (min-width: 1000px) and (max-width: 1279px) {
    .contact-us-container {
      padding: 0 140px;
    }
  }
  
  @media screen and (min-width: 1280px) {
    .collection-bottom-des-container {
      padding: unset;
    }
    
    .collection-bottom-des {
      margin-right: auto;
      margin-left: auto;
    }
    
    .col-xl-4 {
      width: 25%
    }    
  }
</style>

{%- if section.settings.show_section -%}
  <section class="card__section card__section--tight" data-section-id="{{ section.id }}" data-section-type="collection-bathroom-ware-bottom-description">
    <div class="container container--flush collection-bottom-des-container">
      <div class="text-with-icons collection-bottom-des {% if section.settings.stack_mobile %}text-with-icons--stacked{% endif %}">
        {%- for block in section.blocks -%}
          <div class="text-with-icons__item col-xl-4" data-block-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>

            {%- if block.settings.title != blank or block.settings.content != blank -%}
              <div class="text-with-icons__content-wrapper">
                {%- if block.settings.title != blank -%}
                  <p class="collection-bottom-des__title text--strong">{{ block.settings.title | escape }}</p>
                {%- endif -%}

                {%- if block.settings.content != blank -%}
                  <div class="text-with-icons__content rte">
                    {{ block.settings.content  }}
                  </div>
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </section>
  <section class="card__section card__section--tight">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'column' %}
          <div class="container contact-us-container">
            {%- if block.settings.contact_us_title != blank -%}
              <h2 class="text--strong">{{ block.settings.contact_us_title }}</h2>
            {%- endif -%}
            {%- if block.settings.contact_us_content != blank -%}
              <div class="rte">{{ block.settings.contact_us_content }}</div>
            {%- endif -%}
          </div>
        {% endcase %} 
      {% endfor %}
  </section>
{%- endif -%}

